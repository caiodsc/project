<div class="mt-3 mb-3">
  <button type="button" class="btn btn-secondary my-2 my-lg-0 mr-1" data-toggle="modal" data-target="#createWidgetModal">
    New Widget
  </button>
</div>

<div class="mt-3 mb-3">
<%= render 'widgets/index' %>
</div>

<div class="modal" id="createWidgetModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Widget</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'widgets/form' %>
      </div>
    </div>
  </div>
</div>
